# Configuração do Banco de Dados de Testes (Neon)
# Copie este arquivo para .env.test e preencha com suas credenciais do Neon

# Database Configuration
DB_HOST=seu-projeto.neon.tech
DB_PORT=5432
DB_USER=seu-usuario
DB_PASSWORD=sua-senha
DB_NAME=sistema_relatorios_test
DB_SSL=true

# JWT Configuration
JWT_SECRET=test-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
NODE_ENV=test
PORT=3001

# Redis Configuration (Opcional para testes)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=error
