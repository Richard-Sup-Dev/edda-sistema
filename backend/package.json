{
  "name": "edda-backend",
  "version": "1.0.0",
  "description": "API REST para sistema de gestão de relatórios técnicos",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:setup-db": "node setup-test-db.js",
    "lint": "echo 'Linting...'",
    "validate": "npm test && npm run lint",
    "prepare": "husky"
  },
  "keywords": [
    "api",
    "nodejs",
    "express",
    "postgresql",
    "jwt"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sentry/node": "^7.96.0",
    "@sentry/profiling-node": "^7.96.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "file-type": "^21.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "pdf-lib": "^1.17.1",
    "pdf-merger-js": "^5.1.2",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4",
    "playwright": "^1.55.1",
    "puppeteer": "^24.33.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.13",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
