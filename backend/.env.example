# =============================================
# VARIÁVEIS DE AMBIENTE - BACKEND
# =============================================

# Porta do servidor
PORT=3001

# Ambiente (development, production, test)
NODE_ENV=development

# =============================================
# BANCO DE DADOS - POSTGRESQL
# =============================================
# Opção 1: DATABASE_URL (Neon, Heroku, Railway)
DATABASE_URL=postgresql://usuario:senha@host:5432/database?sslmode=require

# Opção 2: Variáveis individuais (PostgreSQL local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edda_db
DB_USER=edda_user
DB_PASSWORD=edda_password

# =============================================
# REDIS - CACHE (OPCIONAL)
# =============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_DISABLED=false  # true para desabilitar Redis

# =============================================
# JWT - AUTENTICAÇÃO
# =============================================
# IMPORTANTE: Gerar com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=gere_uma_chave_forte_com_64_bytes_hexadecimal_aqui
JWT_EXPIRE=7d

# =============================================
# CORS - ALLOWED ORIGINS
# =============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================
# EMAIL (Gmail App Password)
# =============================================
EMAIL_SERVICE=gmail
EMAIL_USER=seu_email@gmail.com
EMAIL_APP_PASS=sua_senha_app_16_caracteres
EMAIL_FROM=seu_email@gmail.com

# =============================================
# FRONTEND URL
# =============================================
FRONTEND_URL=http://localhost:5173

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=info  # debug, info, warn, error
